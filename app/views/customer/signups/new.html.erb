<div class="container">
	<div class="row" >
		<div class="span12">

<% @title = 'SignUp(新規アカウント登録)' %>

<div id="login-form">
	<h1><%= @title %></h1>

	<%= form_for @customer, url: :customer_signup do |f| %>

:family_name, :given_name,
			:family_name_kana, :given_name_kana

	<div>
		<%= f.label :family_name, '名字' %>
		<%= f.text_field :family_name %>
	</div>

	<div>
		<%= f.label :given_name, '名前' %>
		<%= f.text_field :given_name %>
	</div>

	<div>
		<%= f.label :family_name_kana, '名字フリガナ' %>
		<%= f.text_field :family_name_kana %>
	</div>

	<div>
		<%= f.label :given_name_kana, '名前フリガナ' %>
		<%= f.text_field :given_name_kana %>
	</div>

	<div>
		<%= f.label :email, 'メールアドレス' %>
		<%= f.text_field :email %>
	</div>
	<div>
		<%= f.label :password, 'パスワード' %>
		<%= f.password_field :password %>
	</div>
	<div>
		<%= f.submit '新規登録' %>
	</div>
	<% end %>
</div>
</div>
</div>
</div>