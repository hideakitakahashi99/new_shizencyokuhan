<div class="container">
	<div class="row" >
		<div class="span12">

<% @title = 'SignUp' %>
<% @title1 = '(新規アカウント登録)' %>

<div class="signup cf">
	<h1><%= @title %></h1><br>
	<h2><%= @title1 %></h2>

	<%= form_for @customer, url: :customer_signup do |f| %>


	<div>
		<%= f.label :family_name, '名字' %>
		<%= f.text_field :family_name %>
	</div>

	<div>
		<%= f.label :given_name, '名前' %>
		<%= f.text_field :given_name %>
	</div>

	<div>
		<%= f.label :family_name_kana, '名字フリガナ' %>
		<%= f.text_field :family_name_kana %>
	</div>

	<div>
		<%= f.label :given_name_kana, '名前フリガナ' %>
		<%= f.text_field :given_name_kana %>
	</div>

	<div>
		<%= f.label :email, 'メールアドレス' %>
		<%= f.text_field :email %>
	</div>
	<div>
		<%= f.label :password, 'パスワード' %>
		<%= f.password_field :password %>
	</div>
	<div>
		<%= f.submit '新規登録' %>
	</div>
	<% end %>
</div>
</div>
</div>
</div>