<div class="container">
	<div class="row" >
		<div class="span12">

<% @title = 'SignUp' %>
<% @title1 = '(新規アカウント登録)' %>

<div class="signup cf">
	<h1><strong><%= @title %></strong></h1>
	<h4><%= @title1 %></h4>

	<%= form_for @customer, url: :customer_signup do |f| %>


	<div class="inputrow">
		<%= f.label :family_name, '姓' %>
		<%= f.text_field :family_name %>
	</div>

	<div class="inputrow">
		<%= f.label :given_name, '名' %>
		<%= f.text_field :given_name %>
	</div>

	<div class="inputrow">
		<%= f.label :family_name_kana, '姓（フリガナ）' %>
		<%= f.text_field :family_name_kana %>
	</div>

	<div class="inputrow">
		<%= f.label :given_name_kana, '名（フリガナ）' %>
		<%= f.text_field :given_name_kana %>
	</div>

	<div class="inputrow">
		<%= f.label :email, 'メールアドレス' %>
		<%= f.text_field :email %>
	</div>
	<div class="inputrow">
		<%= f.label :password, 'パスワード' %>
		<%= f.password_field :password %>
	</div>
	<div>
		<%= f.submit '新規登録' %>
	</div>
	<% end %>
</div>
</div>
</div>
</div>