
<div class="container">
<div class="row">
<%= form_for @search_form, as: 'search', url: :customer_search, html: { method: :get, class: 'search' } do |f| %>
<div class="pull-left">
<div class="inputrow">
     <%= f.label :prefecture, '' %>
  <%= f.select :prefecture, [["", StaffAddress::PREFECTURE_NAMES]], :prompt => 'お好みの産地' %>
  </div>
</div>
<div class="pull-left">
<div class="inputrow">
     <%= f.label :category, '' %>
  <%= f.select :category, [["", Product::CATEGORY_NAMES]], :prompt => 'お好みの品目' %>
  </div>
</div>

  <%= f.submit "探す！", class: "search-btn" %>

<% end %>
</div>
</div>