
<div class="container">
<div class="row">
<%= form_for @search_form, as: 'search', url: :customer_search, html: { method: :get, class: 'search' } do |f| %>

<%= markup do |m| 
p = FormPresenter.new(f, self)
m << p.drop_down_list_block(:category, '好きな品目:', Product::CATEGORY_NAMES )
m << f.submit('検索')
end %>


<% end %>
</div>
</div>