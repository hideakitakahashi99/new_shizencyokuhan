
    <div class="container">
      <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-info st-panel">
          <div class="panel-heading">
            <div class="panel-title">ログイン</div>
            <div style="float:right; font-size: 80%; position: relative; top:-10px">
              <a href="#">パスワードをお忘れの方</a>
            </div>
          </div>
          <div style="padding-top:30px" class="panel-body" >
            <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
            <!--<form id="loginform" class="form-horizontal" role="form">-->
             <%= form_for @form, url: :customer_session, :html => {:class => "form-horizontal"} do |f| %>
              <div style="margin-bottom: 25px" class="input-group">
                <span class="input-group-addon">
                  <i class="ion-person"></i>
                </span>
                <%= f.text_field :email, :class => "form-control", :placeholder => "メールアドレス" %>
              </div>
              <div style="margin-bottom: 25px" class="input-group">
                <span class="input-group-addon">
                  <i class="ion-locked"></i>
                </span>
                 <%= f.password_field :password, :class => "form-control", :placeholder => "パスワード" %>
              </div>

              <div style="margin-top:10px" class="form-group">
                <!-- Button -->
                <div class="col-sm-12 controls">

                  <%= f.submit 'ログイン', :class => "btn btn-info" %>

                </div>
              </div>
              <% end %>

              <div class="form-group">
                <div class="col-md-12 control">
                  <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%" >まだ会員登録されていない方は... 
                    <a href="#" onClick="$('#loginbox').hide(); $('#signupbox').show()">今すぐ会員登録！ </a>
                  </div>
                </div>
              </div>
              
            <!--</form>-->
          </div>
        </div>
      </div>

    </div>
    <!-- Google Analytics: change UA-XXXXX-X to be your site's ID. -->

