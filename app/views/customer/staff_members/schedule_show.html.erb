     




<div id="layout" class="pure-g">
   

    <div class="content pure-u-1 pure-u-md-3-4">
        <div>
            <!-- A wrapper for all the blog posts -->
            

            <div class="posts">
                <h1 class="content-subhead">Selected Post</h1>

                <section class="post">
                    <header class="post-header">
                    

                        <h2 class="post-title"><%= truncate(@schedule.harvest, length: 15) %><%= truncate(@schedule.opening, length: 15) %></h2>

                        <p class="post-meta">
                            By <a href="<%= customer_staff_member_schedules_path(@schedule.staff_member) %>", class="post-auther"><%= @schedule.staff_member.farm_name %></a> under 
                            <% if @schedule.harvest %>
                            <a class="post-category post-category-design" href="#">収穫予告</a>
                            <% else %>
                            <a class="post-category post-category-js" href="#">開店予告</a>
                            <% end %>

                        </p>
                    </header>

                    <div class="post-description">


                        <p class="schedule-meta">
                        <%= simple_format(@schedule.harvest, :class => "blog") %><%= simple_format(@schedule.opening, :class => "blog") %>
                        </p>

                            <div class="post-images pure-g">
                            <div class="pure-u-1 pure-u-md-1-2">
                                <a href="http://www.flickr.com/photos/uberlife/8915936174/">
                                    <img alt="Photo of someone working poolside at a resort"
                                         class="pure-img-responsive"
                                         src="http://farm8.staticflickr.com/7448/8915936174_8d54ec76c6.jpg">
                                </a>

                                <!--<div class="post-image-meta">
                                    <h3>CSSConf Photos</h3>
                                </div>-->
                            </div>

                            <div class="pure-u-1 pure-u-md-1-2">
                                <a href="http://www.flickr.com/photos/uberlife/8907351301/">
                                    <img alt="Photo of the sunset on the beach"
                                         class="pure-img-responsive"
                                         src="http://farm8.staticflickr.com/7382/8907351301_bd7460cffb.jpg">
                                </a>

                                <!--<div class="post-image-meta">
                                    <h3>JSConf Photos</h3>
                                </div>-->
                            </div>
                        </div>


                        <% if @schedule.harvest_date? %>
                        予定日：
                    <%= @schedule.harvest_date.strftime("%Y年%m月%d日") %>
                    <% end %>
                    <% if @schedule.opening_date? %>
                    予定期間：<br>
                    <%= @schedule.opening_date %><br>　　　　&#8659;<br><%= @schedule.closing_date %>
                    <% end %>
                    </div>
                    <h1 class="content-subhead"></h1>
                </section>
            </div>
        </div>
    </div>

   <div class="pure-u-1 pure-u-md-1-4">
        <div class="header content">
        <% if @staff_member.image? %>
        <%= image_tag @staff_member.image.thumb.url, :size => "48x48", :class => "post-avatar" %>
        <% end %>
            <h1 class="brand-title"><%= @staff_member.farm_name %></h1>
            <h2 class="brand-tagline">ブログ</h2>

            <nav class="nav">
                <ul class="nav-list">
                    <li class="nav-item">
                        <%= link_to "この農家の詳細を見にいく", customer_staff_member_path(@staff_member), { :class => "pure-button"} %>
                    </li>
                    <li class="nav-item">
                        <%= link_to "農産品を見にいく", customer_staff_member_store_index_path(@staff_member), { :class => "pure-button"} %>
                    </li>
                </ul>
            </nav>
        </div>

          <div class="posts content">
                <h1 class="content-subhead">Recent Posts</h1>

<% @schedules.each do |schedules| %>
                <section class="post">
                    <header class="post-header">
                    <% if @staff_member.image? %>
                    <%= image_tag schedules.staff_member.image.thumb.url, :size => "48x48", :class => "post-avatar" %>
                        <% end %>

                        <p><%= link_to customer_staff_member_schedule_show_path( schedule_id: schedules.id ) do %><%= truncate(schedules.harvest, length: 15) %><%= truncate(schedules.opening, length: 15) %><% end %></p>
                         <%= link_to '...続きを読む', customer_staff_member_schedule_show_path( schedule_id: schedules.id ) %>


                        <p class="post-meta">
                            By <a href="<%= customer_staff_member_schedules_path(schedules.staff_member) %>", class="post-auther"><%= schedules.staff_member.farm_name %></a> under 
                            <% if schedules.harvest %>
                            <a class="post-category post-category-design" href="#">収穫予告</a>
                            <% else %>
                            <a class="post-category post-category-js" href="#">開店予告</a>
                            <% end %>
                        </p>
                    </header>
                </section>
        <% end %>

            </div>


    </div>
</div>