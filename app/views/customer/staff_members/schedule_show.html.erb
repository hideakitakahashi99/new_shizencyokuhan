     

<div class="margin15">

<%= link_to "ホーム", :customer_root %> > <%= link_to "ブログ・投稿一覧", :customer_staff_member_schedules %> > ブログ詳細 </div>


<div id="layout" class="pure-g">
   

    <div class="content pure-u-1 pure-u-md-3-4">
        <div>
            <!-- A wrapper for all the blog posts -->
            
<div class="margin15">
            <div class="posts">
                <h1 class="content-subhead">Selected Post</h1>

                <section class="post">
                    <header class="post-header">
                    

                        <h2 class="post-title"><%= truncate(@schedule.harvest, length: 15) %><%= truncate(@schedule.title, length: 15) %></h2>

                        <p class="post-meta">
                            By <a href="<%= customer_staff_member_schedules_path(@schedule.staff_member) %>", class="post-auther"><%= @schedule.staff_member.farm_name %></a> under 
                            <% if @schedule.harvest %>
                            <a class="post-category post-category-design" href="#">収穫予告</a>
                            <% else %>
                            <a class="post-category post-category-js" href="#">Blog</a>
                            <% end %><br>
<%= link_to 'http://www.facebook.com/sharer.php?u='+customer_staff_member_schedule_show_url(:staff_member_id => @staff_member, :schedule_id => @schedule.id ), :target => :blank do %> <%= image_tag 'FB.png' , :width => "20px" %>share<% end %>

                        </p>
                    </header>

                    <div class="post-description">


                        <p class="schedule-meta">
                        <%== @schedule.harvest %><%== @schedule.blog %>
                        </p>

                            <div class="post-images pure-g">
                            <div class="pure-u-1 pure-u-md-1-2">
                                <% if @schedule.image1? %>
                                <%= image_tag @schedule.image1.url, :class => "pure-img-responsive" %>
                                <% end %>


                                <!--<div class="post-image-meta">
                                    <h3>CSSConf Photos</h3>
                                </div>-->
                            </div>
                            <div class="pure-u-1 pure-u-md-1-2">
                                <% if @schedule.image2? %>
                                <%= image_tag @schedule.image2.url, :class => "pure-img-responsive" %>
                                <% end %>


                                <!--<div class="post-image-meta">
                                    <h3>CSSConf Photos</h3>
                                </div>-->
                            </div>

                        </div>
                    </div>
                </section>
            </div>
        </div>

        </div>
    </div>

   <div class="pure-u-1 pure-u-md-1-4">

<div class="margin15">
        <div class="header content">
        <% if @staff_member.image? %>
        <%= image_tag @staff_member.image.thumb.url, :size => "48x48", :class => "post-avatar" %>
        <% end %>
            <h1 class="brand-title"><%= @staff_member.farm_name %></h1>
            <h2 class="brand-tagline">ブログ</h2>

            <nav class="nav">
                <ul class="nav-list">
                    <li class="nav-item">
                        <%= link_to "当農園詳細はこちら", customer_staff_member_path(@staff_member), { :class => "pure-button"} %>
                    </li>
                    <li class="nav-item">
                        <%= link_to "農産品はこちら", customer_staff_member_store_index_path(@staff_member), { :class => "pure-button"} %>
                    </li>
                </ul>
            </nav>
        </div>

    </div>


<div class="margin15">
          <div class="posts content">
                <h1 class="content-subhead">Recent Posts</h1>
            <% @schedules.each do |schedules| %>
                <section class="post">
                    <header class="post-header">
                    <% if @staff_member.image? %>
                    <%= image_tag schedules.staff_member.image.thumb.url, :size => "48x48", :class => "post-avatar" %>
                        <% end %>

                        <p><%= link_to customer_staff_member_schedule_show_path( schedule_id: schedules.id ) do %><%= truncate(schedules.harvest, length: 15) %><%= truncate(schedules.title, length: 15) %><% end %></p>
                         <%= link_to '...続きを読む', customer_staff_member_schedule_show_path( schedule_id: schedules.id ) %>


                        <p class="post-meta">
                            By <a href="<%= customer_staff_member_schedules_path(schedules.staff_member) %>", class="post-auther"><%= schedules.staff_member.farm_name %></a> under 
                            <% if schedules.harvest %>
                            <a class="post-category post-category-design" href="#">収穫予告</a>
                            <% else %>
                            <a class="post-category post-category-js" href="#">Blog</a>
                            <% end %>
                        </p>
                    </header>
                </section>
             <% end %>
            </div>

        </div>


    </div>
</div>