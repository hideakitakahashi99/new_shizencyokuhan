<div class="container">
	<div class="row">
		<div class="span12">
			<% @title = '販売者一覧' %>
			<h2><%= @title %></h2>
		<div class="table-wrapper">

			<%= paginate @staff_members %>

				<table class="table">
					<tr>
						<th>産地</th>
						<th>会社名／農園名</th>
						<th>販売責任者</th>
						<th>フリガナ</th>
						
						<th>現在のステータス</th>
						<th></th>
					</tr>
						<% @staff_members.each do |m| %>
						<% p = StaffMemberPresenter.new(m, self) %>
					<tr>
						
						<td><% if m.staff_address %><%= m.staff_address.prefecture %><% end %></td>
						
						<td><%= m.farm_name %></td>
						<td><%= m.family_name %> <%= m.given_name %></td>
						<td><%= m.family_name_kana %> <%= m.given_name_kana %></td>
						
						<td class="boolean"><%= p.suspended_mark %></td>
						<td class="actions">
							<%= link_to '詳細', [ :customer, m ] %> |
							<%= link_to '農産品一覧',[:customer, m, :store, :index ] %> |
						</td>
					</tr>
						<% end %>
				</table>



				<%= paginate @staff_members %>

			</div>
		</div>
	</div>
</div>

