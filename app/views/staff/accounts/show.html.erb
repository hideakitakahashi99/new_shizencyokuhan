
<div class="container">
	<div class="row">
		<div class="span12">
<% @title = 'アカウント情報' %>
<h1><%= @title %></h1>

<div class="links">
	<%= link_to 'アカウント情報編集', :edit_staff_account %> |
	<%= link_to 'パスワード変更', :edit_staff_password %> |
	<%= link_to '管理者トップ', :staff_root %>
</div>

<table class="table">
	<tr>
		<th>Image:</th>
		<td>
  			<%= image_tag @staff_member.image_url(:thumb).to_s %>
		</td>
	</tr>
	<tr>
		<th>会社名／農場名</th>
		<td>
			<%= @staff_member.farm_name %>
		</td>
	</tr>
	<% if @staff_member.staff_address %>
	<% p1 = StaffAddressPresenter.new(@staff_member.staff_address, self) %>
	<tr>
		<th>所在地</th>
		<td>
			<%= p1.postal_code %>
			<%= p1.prefecture %>
			<%= p1.city %>
			<%= p1.address1 %>
			<%= p1.address2 %>
		</td>
	</tr>
	<% end %>
	
	<tr>
		<th>氏名</th>
		<td>
			<%= @staff_member.family_name %>
			<%= @staff_member.given_name %>
		</td>
	</tr>
	<tr>
		<th>フリガナ</th>
		<td>
			<%= @staff_member.family_name_kana %>
			<%= @staff_member.given_name_kana %>
		</td>
	</tr>
	<tr>
		<th>メールアドレス</th>
		<td class="email">
			<%= @staff_member.email %>
		</td>
	</tr>

	<tr>
		<th>パスワード</th>
		<td class="password">**************</td>
	</tr>
	<tr>
		<th>Vegetables</th>
		<td>
		</td>
	</tr>
	<tr>
		<th>開始日</th>
		<td class="date">
			<%= @staff_member.start_date.strftime('%Y/%m/%d') %>
		</td>
	</tr>
</table>

  </div>

</div>
</div>
</div>