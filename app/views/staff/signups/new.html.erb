<div class="container">
	<div class="row" >
		<div class="span12">

<% @title = 'サインアップ（新規店舗登録）' %>

<div id="login-form">
	<h1><%= @title %></h1>

	<%= form_for @staff_member, url: :staff_signup do |f| %>
	<div>
		<%= f.label :email, 'メールアドレス' %>
		<%= f.text_field :email %>
	</div>
	<div>
		<%= f.label :password, 'パスワード' %>
		<%= f.password_field :password %>
	</div>

	<div>
		<%= f.submit '登録' %>
	</div>
	<% end %>
</div>
</div>
</div>
</div>